  <!-- MAIN CONTENT -->
  <!-- Three-column layout: Tutors list | Students list | Create tutor form -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">

    <!-- Page header with title and description -->
    <div class="mb-8">
      <h1 class="text-2xl sm:text-3xl font-bold text-foreground">Admin Panel</h1>
      <p class="text-muted-foreground mt-1">Manage tutors, students, and accounts</p>
    </div>

    <!-- Three-column responsive grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

      <!-- COLUMN 1: TUTORS LIST -->
      <!-- Displays all tutors with search, role, and status management -->
      <div class="bg-card border border-border rounded-xl p-5">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-foreground">Tutors</h2>
          <span id="tutorCount" class="text-sm text-muted-foreground"></span>
        </div>

        <!-- Search input for filtering tutors -->
        <div class="mb-4">
          <input type="text" id="tutorSearch" placeholder="Search tutors..." class="w-full px-3 py-2.5 bg-secondary border border-border rounded-lg text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring text-sm">
        </div>

        <!-- Scrollable list of tutors (populated by JavaScript) -->
        <div id="tutorsList" class="space-y-3 max-h-[520px] overflow-y-auto pr-1">
          <!-- Tutor cards will be dynamically inserted here by admin.js -->
        </div>
      </div>

      <!-- COLUMN 2: STUDENTS LIST -->
      <!-- Displays all students with search and class management -->
      <div class="bg-card border border-border rounded-xl p-5">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-foreground">Students</h2>
          <span id="studentCount" class="text-sm text-muted-foreground"></span>
        </div>

        <!-- Search input for filtering students -->
        <div class="mb-4">
          <input type="text" id="studentSearch" placeholder="Search students..." class="w-full px-3 py-2.5 bg-secondary border border-border rounded-lg text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring text-sm">
        </div>

        <!-- Scrollable list of students (populated by JavaScript) -->
        <div id="studentsList" class="space-y-3 max-h-[520px] overflow-y-auto pr-1">
          <!-- Student cards will be dynamically inserted here by admin.js -->
        </div>
      </div>

      <!-- COLUMN 3: CREATE TUTOR FORM -->
      <!-- Form for creating new tutor accounts with validation -->
      <div class="bg-card border border-border rounded-xl p-5">
        <h2 class="text-lg font-semibold text-foreground mb-4">Create New Tutor</h2>

        <form id="createTutorForm" class="space-y-4">
          <!-- Username input -->
          <div>
            <label class="block text-sm font-medium text-foreground mb-1.5">Username</label>
            <input type="text" id="newUsername" required placeholder="e.g. john.doe" class="w-full px-3 py-2.5 bg-secondary border border-border rounded-lg text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring">
          </div>

          <!-- Password input with visibility toggle -->
          <div>
            <label class="block text-sm font-medium text-foreground mb-1.5">Password</label>
            <div class="relative">
              <input type="password" id="newPassword" required placeholder="Min 8 characters" class="w-full px-3 py-2.5 bg-secondary border border-border rounded-lg text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring pr-10">
              <button type="button" id="togglePassword" class="absolute right-3 top-1/2 -translate-y-1/2 text-muted-foreground hover:text-foreground transition-colors">
                <svg id="eyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
              </button>
            </div>
            
            <!-- Password strength indicator (4 bars) -->
            <div id="passwordStrength" class="mt-2 hidden">
              <div class="flex gap-1">
                <div id="str1" class="h-1 flex-1 rounded-full bg-border"></div>
                <div id="str2" class="h-1 flex-1 rounded-full bg-border"></div>
                <div id="str3" class="h-1 flex-1 rounded-full bg-border"></div>
                <div id="str4" class="h-1 flex-1 rounded-full bg-border"></div>
              </div>
              <p id="strengthText" class="text-xs mt-1 text-muted-foreground"></p>
            </div>
          </div>

          <!-- Confirm password input with match validation -->
          <div>
            <label class="block text-sm font-medium text-foreground mb-1.5">Confirm Password</label>
            <input type="password" id="confirmPassword" required placeholder="Re-enter password" class="w-full px-3 py-2.5 bg-secondary border border-border rounded-lg text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring">
            <p id="passwordMatch" class="text-xs mt-1 hidden"></p>
          </div>

          <!-- Role selection: GENERIC or STAFF -->
          <div>
            <label class="block text-sm font-medium text-foreground mb-1.5">Role</label>
            <div class="flex gap-2">
              <label class="flex-1">
                <input type="radio" name="role" value="GENERIC" class="sr-only peer" checked>
                <div class="px-4 py-2.5 border border-border rounded-lg text-center cursor-pointer text-muted-foreground peer-checked:bg-primary peer-checked:text-primary-foreground peer-checked:border-primary transition-colors text-sm font-medium">GENERIC</div>
              </label>
              <label class="flex-1">
                <input type="radio" name="role" value="STAFF" class="sr-only peer">
                <div class="px-4 py-2.5 border border-border rounded-lg text-center cursor-pointer text-muted-foreground peer-checked:bg-primary peer-checked:text-primary-foreground peer-checked:border-primary transition-colors text-sm font-medium">STAFF</div>
              </label>
            </div>
          </div>

          <!-- Submit button -->
          <button type="submit" class="w-full px-4 py-2.5 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
            </svg>
            Create Tutor
          </button>
        </form>

        <!-- Recently created tutors list (shown after successful creation) -->
        <div id="recentlyCreated" class="mt-6 border-t border-border pt-4 hidden">
          <h3 class="text-sm font-medium text-muted-foreground mb-3">Recently Created</h3>
          <div id="recentList" class="space-y-2"></div>
        </div>
      </div>
    </div>
  </main>

  <!-- MODALS & NOTIFICATIONS -->
  <!-- Confirmation modal for critical actions (role change, status change, etc.) -->
  <div id="confirmModal" class="modal fixed inset-0 z-50 flex items-center justify-center p-4">
    <!-- Modal backdrop - clicking this closes the modal -->
    <div class="absolute inset-0 bg-black/60" onclick="closeConfirmModal()"></div>
    
    <!-- Modal content -->
    <div class="modal-content relative bg-card border border-border rounded-xl w-full max-w-sm p-6">
      <div class="text-center">
        <!-- Dynamic icon, title, and message set by JavaScript -->
        <div id="confirmIcon" class="w-14 h-14 rounded-full flex items-center justify-center mx-auto mb-4"></div>
        <h3 id="confirmTitle" class="text-lg font-semibold text-foreground mb-2"></h3>
        <p id="confirmMessage" class="text-sm text-muted-foreground mb-6"></p>
      </div>
      
      <!-- Action buttons (Cancel and Confirm) -->
      <div class="flex gap-3">
        <button onclick="closeConfirmModal()" class="flex-1 px-4 py-2.5 border border-border rounded-lg text-foreground hover:bg-secondary transition-colors">Cancel</button>
        <button id="confirmBtn" class="flex-1 px-4 py-2.5 rounded-lg font-medium transition-colors"></button>
      </div>
    </div>
  </div>

  <!-- Toast notification container (bottom-right corner) -->
  <div id="toastContainer" class="fixed bottom-6 right-6 z-50 flex flex-col gap-2"></div>

  <!-- JavaScript for admin panel functionality (API calls, form handling, etc.) -->
  <script src="/js/admin.js"></script>
</body>
